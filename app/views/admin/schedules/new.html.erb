<h1>新しいスケジュールを作成</h1>

<%= form_with(model: [@movie, @schedule], url: admin_movie_schedules_path(@movie), method: :post) do |form| %>
  <% if @schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>
      <ul>
        <% @schedule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time %>
  </div>

  <div class="actions">
    <%= form.submit "スケジュールを作成する" %>
  </div>
<% end %>

<%= link_to "戻る", admin_movie_path(@movie) %>
