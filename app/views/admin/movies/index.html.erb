<!-- app/views/admin_movies/index.html.erb -->
<h1>Movies List</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>公開年</th>
      <th>説明</th>
      <th>画像</th>
      <th>上映状況</th>
      <th>作成日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.year %></td>
        <td><%= movie.description %></td>
        <td><a href="<%= movie.image_url %>">画像</a></td>
        <td><%= movie.is_showing ? "上映中" : "上映予定" %></td>
        <td><%= movie.created_at %></td>
        <td><%= movie.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
