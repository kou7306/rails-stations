<!-- app/views/admin/movies/edit.html.erb -->

<h1>映画の編集</h1>

<%= form_for(@movie, url: admin_movie_path(@movie), method: :put) do |f| %>
  <div class="field">
    <%= f.label :タイトル %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :公開年 %>
    <%= f.text_field :year %>
  </div>

  <div class="field">
    <%= f.label :概要 %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :画像URL %>
    <%= f.text_field :image_url %>
  </div>

  <div class="field">
    <%= f.label :上映中 %>
    <%= f.check_box :is_showing %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
  <div>
      <%= link_to '削除', admin_movie_path(@movie), method: :delete, data: { confirm: '本当に削除しますか？' } %>
  </div>

<% end %>
