<form action="/reservations" method="post">
  <input type="hidden" name="reservation[movie_id]" value="<%= @movie.id %>">
  <input type="hidden" name="reservation[schedule_id]" value="<%= @schedule.id %>">
  <input type="hidden" name="reservation[sheet_id]" value="<%= @sheet.id %>">
  <input type="hidden" name="reservation[date]" value="<%= @date %>">

  <label for="name">予約者氏名:</label>
  <input type="text" id="name" name="reservation[name]" required>

  <label for="email">予約者メールアドレス:</label>
  <input type="email" id="email" name="reservation[email]" required>

  <button type="submit">予約する</button>
</form>
